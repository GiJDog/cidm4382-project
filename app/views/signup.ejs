<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">
<html>
<head>
	<!-- Use the 'title' property to render a page title  -->
	<title><%= title %></title>
</head>
<body style="background-color: #668cff">
  	<!-- Display flash messages  -->
	<% for(var i in messages) { %>
	   <div class="flash"><%= messages[i] %></div>
	<% } %>
	
	<script type="text/javascript" src="/public/application.js"></script>
	 	<link rel="stylesheet" href="/public/lib/bootstrap/dist/css/bootstrap.min.css">

	<!-- Render the signup form  -->
	<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  		<div class="modal-dialog">
		<div class="modal-content">
      		<div class="modal-header">
        		<h1 class="text-center" style="color:#0059b3">Register</h1>
    		</div>
      		<div class="modal-body">
				<form action="/signup" method="post" class="form col-md-12 center-block">
						<div class="form-group">
							<input type="text" class="form-control input-lg" name="firstName" placeholder="First Name"/>
						</div>
						<div class="form-group">
							<input type="text" name="lastName" class="form-control input-lg" placeholder="Last Name"/>
						</div>
						<div class="form-group">
							<input type="text" name="email" class="form-control input-lg" placeholder="Email"/>
						</div>
						<div class="form-group">
							<input type="text" name="username" class="form-control input-lg" placeholder="Username"/>
						</div>
						<div class="form-group">	
							<input type="password" name="password" class="form-control input-lg" placeholder="Password"/>
						</div>
						<div class="form-group">
							<!-- This will activate the signup process and create a new user -->
							<input type="submit" class="btn btn-primary btn-lg btn-block" value="Sign up" />
						</div>
						<div class="text-center">
							<!-- This will exit the signup process and go back to home page -->
							<a href="/#!/" class="btn btn-info btn-md" role="button">Cancel</a>
						</div>
					</form>
				</div>
					<div class="modal-footer">
			        	<div class="col-md-12">
					</div>	
		     	</div>
    	</div>
  		</div>
	</div>
</body>
</html>